{
  "name": "tableifier",
  "version": "1.1.0",
  "description": "Tableifier is a customisable Table maker supporting various in built operations such as sorting, string matching and more. This React component uses Bulma for customised styling.",
  "main": "src/Tableifier.js",
  "scripts": {
    "build": "babel src --out-dir dist --copy-files --ignore 'src/**/*.test.js'",
    "prepare": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ram-shankar58/Tableifier.git"
  },
  "keywords": [
    "react",
    "table",
    "bulma",
    "customize",
    "tablemaker",
    "sortable",
    "filter"
  ],
  "author": "R Ram Shankar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ram-shankar58/Tableifier/issues"
  },
  "homepage": "https://github.com/ram-shankar58/Tableifier#readme",
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.8",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.4",
    "bulma": "^1.0.3",
    "jest-environment-jsdom": "^29.7.0"
  }
}
